<% include ./partial/header %>
<section style=padding:25px>
    <div class="container-fluid">
        <div class="jumbotron">
            <div class="form-group form-inline" style="text-align: center">
                <div class="row" style="padding:2rem">
                    <label>Image:</label>
                    <input type="text" class="form-control" id="image" placeholder="image">
                    <label>Name:</label>
                    <input type="text" class="form-control" id="name" placeholder="name">
                    <label>Description:</label>
                    <input type="text" class="form-control" id="desc" placeholder="pieces">
                </div>
                <div class="row" style="padding:2rem">

                    <label>Pieces:</label>
                    <input type="text" class="form-control" id="pieces" placeholder="pieces">
                    <label>Links:</label>
                    <input type="text" class="form-control" id="links" placeholder="links">
                    <button type="button" class="btn" id="addbtn">Add</button>
                </div>

            </div>

        </div>
        <div class="container">
            <div class="search-container">
                <div class="form-group form-inline">
                    <div class="col-lg-3">
                            <input type="text" class="form-control" id="searchbtn"placeholder="Search.." name="search">
                            
                    </div>
                    
                </div>
            </div>

                <button type="button" class="btn btn-info btn-lg" id="btnTrigger" data-toggle="modal" data-target="#myModal"
                    style="display:none "></button>


                <div class="modal fade" id="myModal" role="dialog">
                    <div class="modal-dialog">


                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                                <h4 class="modal-title">Edit Form</h4>
                            </div>
                            <div class="modal-body">
                                <div class="form-group form-horizontal" style="text-align: center">

                                    <label>Image:</label>
                                    <input type="text" class="form-control" id="eimage" placeholder="image">
                                    <label>Name:</label>
                                    <input type="text" class="form-control" id="ename" placeholder="name">
                                    <label>Description:</label>
                                    <input type="text" class="form-control" id="edesc" placeholder="pieces">
                                    <label>Pieces:</label>
                                    <input type="text" class="form-control" id="epieces" placeholder="pieces">
                                    <label>Links:</label>
                                    <input type="text" class="form-control" id="elinks" placeholder="links">
                                    <button type="button" class="btn" id="submitbtn"> submit</button>


                                </div>

                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                            </div>
                        </div>

                    </div>
                </div>

            </div>
            <table class="table table-hover" id="table">
                <thead>
                    <tr>
                        <th>Image</th>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Pieces</th>
                        <th>Action</th>
                        <th>Links</th>
                    </tr>
                </thead>
                <tbody class="table_body">

                </tbody>
            </table>

        </div>
</section>


<% include ./partial/footer %>